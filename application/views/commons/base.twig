   {% endblock css %}
   
</head>
<body data-baseurl="{{ base_url() }}">

   {% include "commons/navbar.twig" %}

   {% include "commons/menu.twig" %}
      
   <div class="card panel-body" style="font-size: 12px;">
      <div class="card-header" style="background-color: #efefef;">
         {% block descricao_tela %}
         {% endblock descricao_tela %}
      </div>
      <div class="card-body card-body-mobile">
         {% block body %}
         {% endblock body %}
      </div>
   </div>

   <!-- modal notificacoes -->
   <div id="modal_alertas" style="display: none">
      <div class="card">
         <div class="card-body card-body-mobile">
            <div style="height: 38px; float: left;">
               <button class="btn btn-info none" id="marcar-todos-lido"><i class="far fa-envelope-open"></i><span class="hide-mobile"> Marca como lido</span></button>
               <button class="btn btn-secondary none" id="marcar-todos-nao-lido"><i class="far fa-envelope"></i><span class="hide-mobile"> Marca como n√£o lido</span></button>
               <button class="btn btn-danger none" id="excluir-todos-alerta"><i class="fas fa-trash-alt"></i><span class="hide-mobile"> Deletar</span></button>
            </div>
            <table id="table-alertas" class="bootstrap-table" data-locale="pt-BR"></table>
         </div>
      </div>
   </div>
   <!-- modal notificacoes -->
   

   {% block js %}
      <script src="{{ base_url('assets/libs/jquery-3.3.1/jquery-3.3.1.min.js') }}"></script>
